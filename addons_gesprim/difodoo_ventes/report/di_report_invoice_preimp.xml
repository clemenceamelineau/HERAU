<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="di_report_invoice_fixe">
        <t t-call="difodoo_gesprim.di_external_layout">
            <t t-set="o" t-value="o.with_context({'lang': lang})"/>
            <t t-set="address">
                <address t-field="o.partner_id" t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}' />
                <div t-if="o.partner_id.vat" class="mt16"><t t-esc="o.company_id.country_id.vat_label or 'TVA intracom.'"/>: <span t-field="o.partner_id.vat"/></div>
            </t>
            <div class="page">
                <h2>
                    <span t-if="o.type == 'out_invoice' and o.state in ('open', 'in_payment', 'paid')">Facture</span>
                    <span t-if="o.type == 'out_invoice' and o.state == 'draft'">Facture brouillon</span>
                    <span t-if="o.type == 'out_invoice' and o.state == 'cancel'">Facture annulée</span>
                    <span t-if="o.type == 'out_refund'">Avoir</span>
                    <span t-if="o.type == 'in_refund'">Avoir</span>
                    <span t-if="o.type == 'in_invoice'">Facture</span>
                    <span t-field="o.number"/>
                </h2>

                <div id="informations" class="row mt32 mb32">
                    <div class="col-auto mw-100 mb-2" t-if="o.name" name="description">
                        <strong>Description:</strong>
                        <p class="m-0" t-field="o.name"/>
                    </div>
                    <div class="col-auto mw-100 mb-2" t-if="o.date_invoice" name="invoice_date">
                        <strong>Fate de facture:</strong>
                        <p class="m-0" t-field="o.date_invoice"/>
                    </div>
                    <div class="col-auto mw-100 mb-2" t-if="o.date_due and o.type == 'out_invoice' and o.state in ('open', 'in_payment', 'paid')" name="due_date">
                        <strong>Date d'échéance:</strong>
                        <p class="m-0" t-field="o.date_due"/>
                    </div>
                    <div class="col-auto mw-100 mb-2" t-if="o.origin" name="origin">
                        <strong>Document d'origine:</strong>
                        <p class="m-0" t-field="o.origin"/>
                    </div>
                    <div class="col-auto mw-100 mb-2" t-if="o.partner_id.ref" name="customer_code">
                        <strong>Code client:</strong>
                        <p class="m-0" t-field="o.partner_id.ref"/>
                    </div>
                    <div name="reference" class="col-auto mw-100 mb-2" t-if="o.reference">
                        <strong>Reference:</strong>
                        <p class="m-0" t-field="o.reference"/>
                    </div>
                </div>

                <t t-set="display_discount" t-value="any([l.discount for l in o.invoice_line_ids])"/>

                <table class="table table-sm di_o_main_table" name="invoice_line_table">
                    <thead>
                        <tr>
                            <t t-set="colspan" t-value="6"/>
                            <th class="text-left"><span>Désignation</span></th>
                            <th>
                                <div>Nb Pièces/</div>
                                <div>Catégorie</div>
                            </th>
                            <th>
                                <div>Nb Colis/</div>
                                <div>Origine</div>
                            </th>
                            <th>
                                <div>Type Colis/</div>
                                <div>Marque</div>
                            </th>
                            <th>
                                <div>Poids Net/</div>
                                <div>Calibre</div>
                            </th>
                            <th class="d-none text-left"><span>Document d'origine</span></th>
                            <th class="text-right"><span>Quantité</span></th>
                            <th t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span>Prix unitaire</span></th>
                            <th t-if="display_discount" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                <span>Rem.(%)</span>
                                <t t-set="colspan" t-value="colspan+1"/>
                            </th>
                            <th t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span>Taxes</span></th>
                            <th>Unité Prix</th>
                            <th class="text-right">
                                <span groups="account.group_show_line_subtotals_tax_excluded">Montant HT</span>
                                <span groups="account.group_show_line_subtotals_tax_included">Montant TTC</span>
                            </th>
                        </tr>
                    </thead>
                    <tbody class="invoice_tbody">
                        <t t-set="current_subtotal" t-value="0"/>

                        <t t-foreach="o.invoice_line_ids" t-as="line">

                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                            <tr t-att-class="'bg-200 font-weight-bold di_o_line_section' if line.display_type == 'line_section' else 'font-italic di_o_line_note' if line.display_type == 'line_note' else ''">
                                <t t-if="not line.display_type" name="account_invoice_line_accountable">
                                    <td name="account_invoice_line_name"><span t-field="line.name"/></td>
                                    <td>
                                        <!-- on masque le nb pièces si prix au kg -->
                                        <t t-if="line.di_un_prix != 'KG'">
                                            <div t-field="line.di_nb_pieces" />
                                            <div t-field="line.product_id.product_tmpl_id.di_categorie_id" />
                                        </t>
                                        <t t-if="line.di_un_prix == 'KG'">
                                            <div>&amp;nbsp;</div>
                                            <div t-field="line.product_id.product_tmpl_id.di_categorie_id" />
                                        </t>
                                    </td>
                                    <td>
                                        <div t-field="line.di_nb_colis" />
                                        <div t-field="line.product_id.product_tmpl_id.di_origine_id" />
                                    </td>
                                    <td>
                                        <div t-field="line.di_product_packaging_id" />
                                        <div t-field="line.product_id.product_tmpl_id.di_marque_id" />
                                    </td>
                                    <td>
                                        <div t-field="line.di_poin" />
                                        <div t-field="line.product_id.product_tmpl_id.di_calibre_id" />
                                    </td>
                                    
                                    <td class="d-none"><span t-field="line.origin"/></td>
                                    <td class="text-right">
                                        <span t-field="line.quantity"/>
                                        <span t-field="line.uom_id"  groups="uom.group_uom"/>
                                    </td>
                                    <td t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                        <span t-field="line.price_unit" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                    </td>
                                    <td t-if="display_discount" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                        <span t-field="line.discount"/>
                                    </td>
                                    <td t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                        <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.invoice_line_tax_ids))"/>
                                    </td>
                                    <td>
                                        <span t-field="line.di_un_prix" />
                                    </td>
                                    <td class="text-right di_o_price_total">
                                        <span t-field="line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                        <span t-field="line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                                    </td>
                                </t>
                                <t t-if="line.display_type == 'line_section'">
                                    <td t-att-colspan="colspan">
                                        <span t-field="line.name"/>
                                    </td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <t t-set="current_section" t-value="line"/>
                                    <t t-set="current_subtotal" t-value="0"/>
                                </t>
                                <t t-if="line.display_type == 'line_note'">
                                    <td t-att-colspan="colspan">
                                        <span t-field="line.name"/>
                                    </td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    
                                </t>
                            </tr>

                            <t t-if="current_section and (line_last or o.invoice_line_ids[line_index+1].display_type == 'line_section')">
                                <tr class="is-subtotal text-right">
                                    <td t-att-colspan="colspan">
                                        <strong class="mr16">Subtotal</strong>
                                        <span
                                            t-esc="current_subtotal"
                                            t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                        />
                                    </td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                </tr>
                            </t>
                        </t>
                    </tbody>
                </table>

                <div class="clearfix">
                    <div id="total" class="row">
                        <div t-attf-class="#{'col-4' if report_type != 'html' else 'col-sm-7 col-md-5'} ml-auto">
                            <table class="table table-sm">
                                <tr class="border-black di_o_subtotal" style="">
                                    <td><strong>Sous-total</strong></td>
                                    <td class="text-right">
                                        <span t-field="o.amount_untaxed"/>
                                    </td>
                                </tr>
                                <t t-foreach="o.amount_by_group" t-as="amount_by_group">
                                    <tr style="">
                                        <t t-if="len(o.tax_line_ids) == 1 and o.amount_untaxed == amount_by_group[2]">
                                            <td><span t-esc="amount_by_group[0]"/></td>
                                            <td class="text-right di_o_price_total">
                                                <span t-esc="amount_by_group[3]" />
                                            </td>
                                        </t>
                                        <t t-else="">
                                            <td>
                                                <span t-esc="amount_by_group[0]"/>
                                                <span>&amp;nbsp;<span>on</span>
                                                    <t t-esc="amount_by_group[4]"/>
                                                </span>
                                            </td>
                                            <td class="text-right di_o_price_total">
                                                <span t-esc="amount_by_group[3]"/>
                                            </td>
                                        </t>
                                    </tr>
                                </t>
                                <tr class="border-black di_o_total">
                                    <td><strong>Total</strong></td>
                                    <td class="text-right">
                                        <span t-field="o.amount_total"/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
                <p t-if="o.reference">
                    Merci d'utiliser cette référence pour vos paiements : <b><span t-field="o.reference"/></b>
                </p>
                <p t-if="o.comment" name="comment">
                    <span t-field="o.comment"/>
                </p>
                <p t-if="o.payment_term_id" name="payment_term">
                    <span t-field="o.payment_term_id.note"/>
                </p>
                <p t-if="o.fiscal_position_id.note" name="note">
                    <span t-field="o.fiscal_position_id.note"/>
                </p>
                
            </div>
        </t>
    </template>
   
    
    <template id="di_report_invoice_fixe_temp">
        <t t-call="difodoo_gesprim.di_html_container">
            <t t-foreach="docs" t-as="o">
                <t t-foreach="range(o.di_nbex)" t-as="n">
                    <t t-call="difodoo_ventes.di_report_invoice_fixe" t-lang="o.partner_id.lang"/>
                </t>                
            </t>
        </t>
    </template>
    
    <report 
        id="di_account_invoice_fixe"
        model="account.invoice"
        string="Facture position fixe"
        report_type="qweb-pdf"
        name="difodoo_ventes.di_report_invoice_fixe_temp"
        file="difodoo_ventes.di_report_invoice_fixe_temp"
        print_report_name="(object._get_report_base_filename())"
    />
    
   
</odoo>