<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<template id="di_report_saleorder_document" inherit_id="sale.report_saleorder_document">
		<!-- Modification sur entêtes de colonnes -->
		<!-- ajout de l'unité de prix après le prix -->
		<xpath expr="//th[3]" position="after">
			<th>Unité Prix</th>
		</xpath>
		<!-- suppression quantité en unité de mesure-->
		<xpath expr="//th[2]" position="replace"/>
		<!-- ajout colonnes pièces, colis, palettes, poids -->
		<xpath expr="//th[1]" position="after">
			<th>Nb Pièces</th>
			<th>Nb Colis</th>
			<th>Type Colis</th>
			<th>Nb Pal.</th>
			<th>Type Pal.</th>
			<th>Poids Net</th>
		</xpath>
		<!-- Modification sur le contenu des colonnes -->
		<!-- ajout de l'unité de prix après le prix -->
		<xpath expr="//td[3]" position="after">
			<td>
                <span t-field="l.di_un_prix"/>
            </td>
		</xpath>
		<!-- ajout colonnes pièces, colis, palettes, poids -->	
		<xpath expr="//td[3]" position="before">
			<td class="text-right">
				<span t-field="l.di_nb_pieces" />
			</td>
			<td class="text-right">
            	<span t-field="l.di_nb_colis"/>
            </td>
			<td>
                <span t-field="l.product_packaging"/>
            </td>
			<td class="text-right">
                <span t-field="l.di_nb_palette"/>
            </td>                
			<td>
                <span t-field="l.di_type_palette_id"/>
            </td>
			<td class="text-right">
                <span t-field="l.di_poin"/>
            </td>            
		</xpath>
		<!-- suppression quantité en unité de mesure-->
		<xpath expr="//td[2]" position="replace"/>
	</template>
</odoo>
